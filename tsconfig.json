  "compilerOptions": {
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "ES5",
    "outDir": "./build",
    "rootDir": "./"
  },
  "paths": {
    "~/*": ["~/*"]
  },
  "files": [
    "./**/*.ts"
  ],
  "include": [
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
